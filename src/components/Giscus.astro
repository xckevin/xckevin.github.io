---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={['giscus-wrapper', className]}>
    <div class="giscus"></div>
</section>

<script>
    function loadGiscus() {
        const container = document.querySelector('.giscus');
        if (!container) return;

        container.innerHTML = '';

        const script = document.createElement('script');
        script.src = 'https://giscus.app/client.js';
        script.setAttribute('data-repo', 'xckevin/xckevin.github.io');
        script.setAttribute('data-repo-id', 'R_kgDORXfDKQ');
        script.setAttribute('data-category', 'General');
        script.setAttribute('data-category-id', 'DIC_kwDORXfDKc4C3PZV');
        script.setAttribute('data-mapping', 'pathname');
        script.setAttribute('data-strict', '0');
        script.setAttribute('data-reactions-enabled', '1');
        script.setAttribute('data-emit-metadata', '0');
        script.setAttribute('data-input-position', 'bottom');
        script.setAttribute('data-theme', 'preferred_color_scheme');
        script.setAttribute('data-lang', 'zh-CN');
        script.setAttribute('data-loading', 'lazy');
        script.crossOrigin = 'anonymous';
        script.async = true;

        container.appendChild(script);
    }

    document.addEventListener('astro:page-load', loadGiscus);
</script>
